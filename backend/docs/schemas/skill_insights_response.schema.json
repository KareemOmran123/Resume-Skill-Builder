{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillpulse.local/schemas/skill_insights_response.schema.json",
  "title": "SkillInsightsResponse",
  "description": "Frontend-facing contract for top skills panel.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "subtitle",
    "window",
    "filters",
    "totals",
    "skills"
  ],
  "properties": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "window": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "days"
      ],
      "properties": {
        "days": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "filters": {
      "$ref": "./ingest_query.schema.json"
    },
    "totals": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "postings_count",
        "unique_companies_count"
      ],
      "properties": {
        "postings_count": {
          "type": "integer",
          "minimum": 0
        },
        "unique_companies_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "skills": {
      "type": "array",
      "minItems": 0,
      "maxItems": 25,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "count",
          "pct"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "pct": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        }
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "schema_version": {
      "type": "string",
      "default": "1.0.0"
    }
  }
}

